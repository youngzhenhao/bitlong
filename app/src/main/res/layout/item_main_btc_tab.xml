<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_nighning" />

            <TextView
                android:id="@+id/tv_txt_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:text="111"
                android:textColor="@color/gray_text_light"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_down_line"
        android:layout_width="30dp"
        android:layout_height="3dp"
        android:layout_below="@+id/ll_txt"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_71f2"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />
</RelativeLayout>