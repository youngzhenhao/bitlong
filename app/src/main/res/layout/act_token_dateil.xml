<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:paddingHorizontal="16dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_btc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_btc1" />

            <TextView
                android:id="@+id/item_tv_btcName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@+id/img_btc"
                android:text="BTC"
                android:textColor="@color/color_3838"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/item_tv_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="BRC-20"
                android:textColor="@color/color_8080"
                android:textSize="13sp" />


            <LinearLayout
                android:id="@+id/ll_to_dateil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_txt13"
                    android:textColor="@color/color_5af0"
                    android:textSize="13dp" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:src="@mipmap/icon_more" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/color_8080" />

        <RelativeLayout
            android:id="@+id/title_rl"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:paddingHorizontal="16dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/item_tv_btc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"

                android:text="@string/app_txt29"
                android:textColor="@color/color_3838"
                android:textSize="15sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_tv_amonut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_5a5a"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/item_tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="$0"
                    android:textColor="@color/color_6e82" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"

            android:background="@color/color_fafa" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingHorizontal="16dp"
            android:visibility="visible">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"


                android:text="@string/app_txt30"
                android:textColor="@color/color_3838"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_all_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_transfer"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="31dp"
            android:layout_weight="1"

            android:drawableTop="@mipmap/img_turefer_buttom"
            android:gravity="center"
            android:text="@string/app_txt31"
            android:textColor="@color/color_3838"
            android:background="@drawable/bg_6af1"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="31dp"
            android:layout_weight="1"
            android:background="@drawable/bg_trafer"
            android:drawableTop="@mipmap/img_btc_in"
            android:gravity="center"
            android:text="@string/app_txt32"
            android:textColor="@color/color_3838"

            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>