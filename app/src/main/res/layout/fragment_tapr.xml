<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@mipmap/bg_tapr_top"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="14dp"
            android:text="TAPR-2"
            android:textColor="@color/color_3838"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_white_r50"
            android:drawableLeft="@mipmap/icon_seach"
            android:drawablePadding="16dp"
            android:hint="@string/app_txt69"
            android:maxLines="1"
            android:textSize="14dp" />

        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/roll_banner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_side_f4ff"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_plus" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/img_txt_create"
            android:text="@string/app_txt53"
            android:textColor="@color/color_5af0"
            android:textSize="18sp" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tapr_tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"

        app:tabIndicatorColor="@color/color_71f2"
        app:tabIndicator="@mipmap/img_tab_bottom"
        app:tabIndicatorHeight="5dp"
        app:tabGravity="center"

        app:tabIndicatorFullWidth="false"
        app:tabMode="auto"
        app:tabSelectedTextColor="@color/color_3838"

        app:tabTextColor="@color/gray_text_light" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
android:padding="5dp"
        android:background="@color/color_fafa"

        android:orientation="horizontal">

        <TextView

            android:id="@+id/tv_me_attention_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:text="@string/app_txt72"/>

        <TextView
            android:id="@+id/tv_hot_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:src="@mipmap/img_txt_create"
            android:text="@string/app_txt73"


            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_all_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:text="@string/app_txt74"/>
    </LinearLayout>

    <com.btc.wallect.utils.CustomViewPager
        android:id="@+id/tapr_viewPager"
        android:layout_width="50dp"
        android:textSize="12sp"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <com.btc.wallect.utils.CustomRecyclerView
        android:id="@+id/recycler_tapr_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:background="@drawable/bg_white"

        />

</LinearLayout>