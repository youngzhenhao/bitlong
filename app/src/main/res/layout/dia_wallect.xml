<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bg_dia_half_white"
   >

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_txt15"
        android:textColor="@color/color_3838"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/img_close" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/img_close"
        android:layout_marginVertical="12dp"
        android:background="@color/color_8080" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:text="@string/app_txt16"
        android:textColor="@color/color_0000"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/img_add2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:src="@mipmap/icon_add2" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_wallect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/img_add2"

        />


</RelativeLayout>