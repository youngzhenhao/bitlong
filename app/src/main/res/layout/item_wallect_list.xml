<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bg_71f0"
        android:visibility="visible">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="43dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"

            android:src="@mipmap/image_btc2" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/item_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_tv_btc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="0"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_tv_btc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="bc362....2dfsvd"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/item_img_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"

                    android:src="@mipmap/icon_copy" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_tv_amonut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.02569BTC"
                android:textStyle="bold"
                android:textColor="@color/color_eb38"
                android:textSize="16dp" />


        </LinearLayout>
    </RelativeLayout>



</LinearLayout>