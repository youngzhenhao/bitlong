<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_5af0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/bg_white"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="@string/app_txt40"
            android:textColor="@color/color_3838"
            android:textSize="14dp"

            />

        <ImageView
            android:id="@+id/img_qr_code"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="28dp"
            android:src="@mipmap/img_sel_wllect" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="19dp"
            android:background="@drawable/bg_f2f2"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/app_txt41"

                />

            <TextView
                android:id="@+id/tv_loction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="b262ds62262c2aa6df26262f3e065v62sv32seg26251b8r1551v8r1v8r1"

                />

            <ImageView
                android:id="@+id/img_new_loction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/tv_to_dateil"
                android:gravity="center"
                android:src="@mipmap/img_to_dateil" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@mipmap/img_share"
                android:text="@string/app_txt41"

                />

            <ImageView
                android:id="@+id/img_copy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="1"
                android:src="@mipmap/img_txt_copy"

                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>