<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="844dp"
        android:orientation="vertical">

        <!-- 第二个View，例如矩形1 -->
        <View
            android:id="@+id/w_状态栏"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            />
        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="16dp"
                android:onClick="returnPre"
                android:src="@drawable/exit"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/矩形1"
                android:layout_width="64dp"
                android:layout_height="44dp"
                android:layout_marginLeft="115dp"
                android:gravity="center"
                android:text="添加钱包"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/分组3"
                android:layout_width="342dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="选择协议"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="normal"
                android:typeface="sans"

                />

            <Spinner
                android:id="@+id/mySpinner"
                android:layout_width="342dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginTop="11.81dp"
                android:background="@drawable/model2"
                android:entries="@array/options_array"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/分组_3"
                android:layout_width="342dp"
                android:layout_height="22dp"
                android:text="代币id（代币名称）"
                android:textSize="16dp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:typeface="sans"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"

                />
            <!-- EditText 用于接收用户输入的文本 -->
            <EditText
                android:id="@+id/myEditText"
                android:layout_width="342dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:hint="请输入代币id(代币id)"
                android:textSize="14dp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:typeface="sans"
                android:padding="8dp"
                android:layout_marginTop="11.81dp"
                android:background="@drawable/model2"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="@drawable/model4"
            android:orientation="vertical">
            />

            <TextView
                android:id="@+id/矩形4"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="29dp"
                android:textAlignment="center"
                android:text="代币详情"
                android:textColor="#383838"
                android:textSize="16px" />
            <!-- 发行量 -->
            <TextView
                android:id="@+id/totalSupplyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发行量: xxx"
                android:textSize="14px"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="72dp"/>

            <!-- 链上记录 -->
            <TextView
                android:id="@+id/chain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发行日期: xxx"
                android:textSize="14px"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="58dp"/>

            <!-- 代币介绍 -->
            <TextView
                android:id="@+id/totalSupplyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发行量: xxx"
                android:textSize="14px"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="58dp"/>
            <TextView
                android:id="@+id/totalSupplyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发行量: xxx"
                android:textSize="14px"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="58dp"/>
            <TextView
                android:id="@+id/totalSupplyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发行量: xxx"
                android:textSize="14px"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="58dp"/>
            <TextView
                android:id="@+id/totalSupplyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发行量: xxx"
                android:textSize="14px"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="58dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/分组7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="114dp"
            android:text="确认"
            android:textSize="18dp"
            android:background="@drawable/group7"
            android:onClick="nextActivity"/>
        <!-- 分组 7 -->
        <Button
            android:id="@+id/分组_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="取消"
            android:textSize="18dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/group7"
            android:alpha="0.1"
            android:onClick="returnPre"/>
    </LinearLayout>

</RelativeLayout>
